<% if @client && @client.errors %>
  <% @client.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<h3>Edit <%= @client.full_name %></h3>

<p>Age: <%= @client.age %></p>
<p>Notes: <%= @client.notes %></p>

<form action="/clients/<%= @client.id %>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="patch">

  <label>Client Name: </label>
  <input type="text" name="full_name" id="client_full_name" value="<%= @client.full_name%>">
  <br><br>
  <label>New Age: </label>
  <input type="number" name="age" id="client_age" value="<%= @client.age %>">
  <br><br>
  <label>Add Notes: </label>
  <input type="text" name="notes" id="client_notes" value="<%= @client.notes %>">
  <br><br>

  <h4>Change the Course</h4>
  <ul>
    <% @client.courses.each do |course| %>
    <li><a href="/courses/<%= course.id %>"><%= course.name %></a></li>
    <% end %>
  </ul>
  <br>

  <label for="course[name]">Course Name:</label>
  <input type="text" name="course[name]" id="new_course">
  <br><br>

  <a href="/clients">Back to the list</a>
  <br><br>

  <input type="submit" value="Update Client">
</form>
